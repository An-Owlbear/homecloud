{
  "schema": "v1.0",
  "version": "v0.1.2",
  "id": "homecloud.app",
  "name": "homecloud",
  "author": "homecloud",
  "description": "A home server management app",
  "containers": [
    {
      "name": "homecloud",
      "image": "ghcr.io/an-owlbear/homecloud:v0.1.2",
      "volumes": [
        "./.env:/app/.env",
        "/var/run/docker.sock:/var/run/docker.sock",
        "homecloud-db:/app/tmp/data.db"
      ],
      "ports": [
        "1323:1323"
      ]
    }
  ]
}

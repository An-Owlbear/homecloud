{
  "schema": "v1.0",
  "version": "v0.1.6",
  "id": "homecloud.app",
  "name": "homecloud",
  "author": "homecloud",
  "description": "A home server management app",
  "containers": [
    {
      "name": "homecloud",
      "image": "ghcr.io/an-owlbear/homecloud:v0.1.7",
      "volumes": [
        "./.env:/app/.env",
        "./.dev.env:/app/.dev.env",
        "/var/run/docker.sock:/var/run/docker.sock",
        "/run/udev:/run/udev",
        "homecloud-db:/app/db"
      ],
      "ports": [
        "1323:1323"
      ],
      "extra_hosts": [
        "launcher.homecloud.internal:host-gateway"
      ],
      "privileged": true,
      "environment": {
        "ENVIRONMENT": "DEV",
        "HOMECLOUD_APP_DIR": "{{.HomecloudAppDir}}"
      }
    }
  ]
}

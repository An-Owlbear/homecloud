{
  "schema": "v1.0",
  "version": "v0.1.9",
  "id": "homecloud.app",
  "name": "homecloud",
  "author": "homecloud",
  "description": "A home server management app",
  "containers": [
    {
      "name": "homecloud",
      "image": "ghcr.io/an-owlbear/homecloud:v0.1.9",
      "volumes": [
        "./.env:/app/.env",
        "./.dev.env:/app/.dev.env",
        "/var/run/docker.sock:/var/run/docker.sock",
        "/run/udev:/run/udev",
        "/dev:/dev",
        "/media/homecloud:/media/homecloud:rshared",
        "!AppDir/data:/app/data",
        "homecloud-db:/app/db"
      ],
      "ports": [
        "{{.HostPort}}:{{.HostPort}}"
      ],
      "extra_hosts": [
        "launcher.homecloud.internal:host-gateway"
      ],
      "privileged": true,
      "environment": {
        "ENVIRONMENT": "{{.Environment}}",
        "HOMECLOUD_APP_DIR": "{{.HomecloudAppDir}}",
        "HOMECLOUD_HOST": "{{.HostUrl}}"
      }
    }
  ]
}
